@model POSWeb.Entidades.Producto
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="small-header">
    <div class="hpanel">
        <div class="panel-body">
            <div id="hbreadcrumb" class="pull-right">
                <ol class="hbreadcrumb breadcrumb">
                    <li>@Resources.TextosVistas.POSWeb</li>
                    <li class="active">
                        <span>@Resources.TextosVistas.Facturacion </span>
                    </li>
                </ol>
            </div>
            <h2 class="font-light m-b-xs">
                @Resources.TextosVistas.Facturacion
            </h2>
            <small>@Resources.TextosVistas.txtFacturacionDesc</small>
        </div>
    </div>
</div>


<div class="content">

    <div class="row">
        <div class="col-lg-12">
            <div class="hpanel">
                <div class="panel-heading">
                </div>
                <div class="panel-body">
                    <form role="form" id="form">
                        <div class="form-group">
                            @Html.LabelFor(model => model.CodigoBarra)
                            @Html.TextBoxFor(model => model.CodigoBarra, htmlAttributes: new { @placeholder = "Código Producto", required = "required", @class="form-control" })
                            @*<input type="text" placeholder="Código Producto" class="form-control" required>*@
                        </div>
                        <div>
                            <button class="btn btn-sm btn-primary m-t-n-xs" type="button" onclick="oFacturacion.BuscarProducto();"><strong>Submit</strong></button>
                        </div>
                    </form>
                </div>
            </div>
        </div>

        <div class="col-lg-6">
            <div class="hpanel">
                <div class="panel-heading">
                    Items de Compra
                </div>
                <div class="panel-body">

                    <table class="table table-striped">
                        <thead>
                            <tr>
                                <th>Cantidad</th>
                                <th>Producto</th>
                                <th>Total</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td><input type="text" name="name" value="1" /></td>
                                <td>Coca Cola Zero 2 L</td>
                                <td>2500</td>
                            </tr>
                            <tr>
                                <td>2</td>
                                <td>Imperial 600 ml</td>
                                <td>2000</td>
                            </tr>
                            <tr>
                                <td>5</td>
                                <td>Chocolate Tutto</td>
                                <td>1500</td>
                            </tr>
                        </tbody>
                    </table>

                </div>
            </div>
        </div>

        <div class="col-lg-6">
            <div class="hpanel">
                <div class="panel-heading">
                    Resumen de Compra
                </div>
                <div class="panel-body">
                    <div class="form-group"><label>Total a pagar: ₡ 6,000</label></div>
                    <div class="form-group"><button class="btn btn-sm btn-primary m-t-n-xs" type="button">Pagar</button></div>
                    <div class="form-group"><button class="btn btn-sm btn-primary m-t-n-xs" type="button">Cancelar</button></div>
                </div>
            </div>
        </div>

    </div>
</div>


@section Scripts {
    @Scripts.Render("~/bundles/validation/js")
    @Scripts.Render("~/Scripts/EventosFormulario/EventosFacturacion.js")
    <script type="text/javascript">
        var urlBuscarProducto = '@Url.Action("BuscarProducto", "Facturacion")';

          $(function(){

        $("#form").validate({
            rules: {
                password: {
                    required: true,
                    minlength: 3
                },
                url: {
                    required: true,
                    url: true
                },
                number: {
                    required: true,
                    number: true
                },
                max: {
                    required: true,
                    maxlength: 4
                }
            },
            submitHandler: function(form) {
                form.submit();
            }
        });
    });

    </script>
}

